<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GonzalezFExP2.MainPage"
               Title="Home"
             BackgroundColor="Gray">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
               Text="Fabio Gonzalez"
               FontSize="32"
               TextColor="Black"
               HorizontalOptions="Center"
               FontAttributes="Bold"  />

            <Image
                 Source="tun.jpeg" 
                 HeightRequest="300"
                WidthRequest="300"
                 HorizontalOptions="Center"/>

            <Button Text="Ver Chistes"
                BackgroundColor="White"
                TextColor="Black"
                    
                CornerRadius="10"
                Clicked="OnVerChistesClicked" />

            <Button Text="Acerca de mí"
                BackgroundColor="White"
                TextColor="Black"
                CornerRadius="10"
                Clicked="OnAcercaDeClicked" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
