<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GonzalezFExP2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,0"
            Spacing="25"
            VerticalOptions="Center">
            <Image
               Source="tun.jpeg" 
               HeightRequest="200"
               WidthRequest="200"
               HorizontalOptions="Center"/>

            <Label
               Text="Fabio Gonzalez"
               FontSize="32"
               HorizontalOptions="Center"
               FontAttributes="Bold"  />

            <Button Text="Ver Chistes"
                Clicked="OnVerChistesClicked" />

            <Button Text="Acerca de mí"
                Clicked="OnAcercaDeClicked" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
